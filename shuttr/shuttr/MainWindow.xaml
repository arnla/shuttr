<Window x:Class="shuttr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shuttr"
        mc:Ignorable="d"
        Title="MainWindow" Height="1200" Width="1920">

    <Grid Background="#F69FCBE4">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TopBar" Height="Auto"/>
            <RowDefinition x:Name="Line" Height="Auto"/>
            <RowDefinition x:Name="Content"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="Tabs" 
                    Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.Column="0">
            <Button x:Name="PhotosTab"
                Content="Photos"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="128" 
                Height="34"
                Click="button_Click" 
                FontFamily="Microsoft YaHei" 
                FontWeight="Bold"  
                FontSize="24"
                BorderThickness="0,0,0,0"
                Background="#F69FCBE4" 
                Foreground="White">
            </Button>

            <Button x:Name="DiscussionsTab"
                Content="Discussions"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="128"
                Click="button_Click" 
                FontFamily="Microsoft YaHei" 
                FontWeight="Bold" 
                BorderThickness="0,0,0,0"
                Background="#F69FCBE4" 
                Foreground="White" 
                Height="34" 
                FontSize="24">
            </Button>

            <Button x:Name="SavedTab"
                Content="Saved"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="128"
                Click="button_Click" 
                FontFamily="Microsoft YaHei" 
                FontWeight="Bold" 
                BorderThickness="0,0,0,0"
                Background="#F69FCBE4" 
                Foreground="White" 
                Height="34" 
                FontSize="24">
            </Button>
        </StackPanel>

        <Border x:Name="SearchBar"
                BorderBrush="Gray"
                BorderThickness="2"
                Background="#FFB8B8B8"
                HorizontalAlignment="Left"
                Height="34"
                VerticalAlignment="Top" 
                Width="647" 
                Opacity="0.5"
                Grid.Row="0"
                Grid.Column="1">
            <TextBlock 
                x:Name="SearchTextBox"
                TextWrapping="Wrap" 
                Text=" Search..." 
                VerticalAlignment="Center" 
                FontFamily="Microsoft YaHei" 
                FontWeight="Bold" 
                FontSize="18" 
                Opacity="0.5">
                <TextBlock.Background>
                    <SolidColorBrush Opacity="0"/>
                </TextBlock.Background>
            </TextBlock>
        </Border>

        <Button x:Name="PostButton"
                Content="POST"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="85"
                Click="button_Click" 
                BorderThickness="0,1,1,1"
                Background="#F63090C7" 
                Foreground="White" 
                Height="34"
                Grid.Row="0"
                Grid.Column="2">
            <Button.Effect>
                <DropShadowEffect Direction="270" ShadowDepth="1"/>
            </Button.Effect>
        </Button>

        <StackPanel x:Name="UserControls"
                    Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.Column="3">
            <Button x:Name="NotificationsButton"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="34"
                Click="button_Click" 
                BorderThickness="0,0,0,0"
                Background="#F69FCBE4"
                Foreground="White"
                Height="34">
                <StackPanel>
                    <Image Source="/Images/notification.png" Opacity="0.65"/>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Green"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGoldenrod"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="MessagesButton"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="34" 
                Click="button_Click"
                BorderThickness="0,0,0,0"
                Background="#F69FCBE4"
                Foreground="White"
                Height="34">
                <StackPanel>
                    <Image Source="/Images/messages.png" Opacity="0.7" RenderTransformOrigin="1.216,0.647"/>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Green"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGoldenrod"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="AccountButton"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="34" 
                Click="button_Click" 
                BorderThickness="0,0,0,0" 
                Background="#F69FCBE4"
                Foreground="White"
                Height="34">
                <StackPanel>
                    <Image Source="/Images/userprofile.png" Opacity="0.7"/>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Green"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGoldenrod"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <Line X1="0"
              X2="1920"
              Stroke="Black"
              StrokeThickness="4"
              Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="4"/>
        
        <ToolBar x:Name="SortBy"
                 HorizontalAlignment="Left"
                 Height="30" 
                 VerticalAlignment="Top" 
                 Width="219"
                 Header="Sort by:"
                 Grid.Row="2"
                 Grid.Column="3">
            <Menu Height="25" 
                  VerticalAlignment="Top" 
                  Width="100"/>
        </ToolBar>
        
        <ScrollViewer HorizontalAlignment="Center" 
                      Height="1007"
                      VerticalAlignment="Top" 
                      Width="1000"
                      Grid.Row="2"
                      Grid.Column="0"
                      Grid.ColumnSpan="4">
            <StackPanel x:Name="PhotoFeed">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Margin" Value="5,10,5,0"/>
                    </Style>
                </StackPanel.Resources>
                <Image Source="/Images/mountain.jpg"/>
                <Image Source="/Images/mountain2.jpg"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
