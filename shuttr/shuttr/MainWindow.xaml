<Window x:Class="shuttr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shuttr"
        mc:Ignorable="d"
        Title="MainWindow" Height="1200" Width="1920">

    <Grid Background="#F69FCBE4">
        <Button x:Name="AccountButton"
                Margin="1718,10,10.333,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="0.5,0.5"
                Background="#F63090C7">
            <StackPanel Orientation="Horizontal">
                <Image Source="profile.jpg" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="50"/>
                <Label Padding="0" FontFamily="Microsoft YaHei" FontSize="24" FontWeight="Bold" Foreground="White" Background="#F63090C7" VerticalAlignment="Center" HorizontalAlignment="Center">Username</Label>
            </StackPanel>
        </Button>
        
        <Button x:Name="PostButton"
                Content="POST"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="85" 
                Margin="1604,76,0,0" 
                Click="button_Click" 
                FontFamily="Microsoft YaHei" 
                FontWeight="Bold" 
                BorderThickness="0,1,1,1" 
                RenderTransformOrigin="0.5,0.5" 
                Background="#F63090C7" 
                Foreground="White" 
                Height="34" 
                FontSize="24">
            <Button.Effect>
                <DropShadowEffect Direction="270" ShadowDepth="1"/>
            </Button.Effect>
        </Button>
        
        <Button Content="NotificationsButton" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="34" 
                Margin="1760,76,0,0" 
                Click="button_Click" 
                FontFamily="Microsoft YaHei" 
                FontWeight="Bold" 
                BorderThickness="0,1,1,1" 
                RenderTransformOrigin="0.5,0.5"
                Background="#F63090C7"
                Foreground="White"
                Height="34"
                FontSize="24"/>
        
        <Button Content="MessagesButton"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="34" Margin="1829,76,0,0"
                Click="button_Click"
                FontFamily="Microsoft YaHei"
                FontWeight="Bold"
                BorderThickness="0,1,1,1"
                RenderTransformOrigin="0.5,0.5"
                Background="#F63090C7"
                Foreground="White"
                Height="34"
                FontSize="24"/>

        <Rectangle x:Name="SearchBar"
                   HorizontalAlignment="Left"
                   Height="34"
                   Margin="671,76,0,0"
                   Stroke="#FFC9C9C9"
                   StrokeThickness="4"
                   VerticalAlignment="Top"
                   Width="615"
                   Opacity="0.1"
                   Fill="Black"/>

        <Line
            X1="0" Y1="125"
            X2="1920" Y2="125"
            Stroke="Black"
            StrokeThickness="4" />
        
        <ScrollViewer HorizontalAlignment="Center" 
                      Height="100" 
                      Margin="960,223,960,0" 
                      VerticalAlignment="Top" 
                      Width="1000"/>
    </Grid>
</Window>
