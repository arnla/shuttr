<Window x:Class="shuttr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shuttr"
        mc:Ignorable="d"
        Title="MainWindow" Height="1200" Width="1920">

    <Grid Background="#F69FCBE4">
        <Button x:Name="AccountButton"
                Margin="1847,10,10,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="0.5,0.5"
                Background="#F63090C7">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/profile.jpg" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="50"/>
            </StackPanel>
            <Button.Effect>
                <DropShadowEffect Direction="270" ShadowDepth="1"/>
            </Button.Effect>
        </Button>

        <Button x:Name="PostButton"
                Content="POST"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="85" 
                Margin="1604,19,0,0" 
                Click="button_Click" 
                FontFamily="Microsoft YaHei" 
                FontWeight="Bold" 
                BorderThickness="0,1,1,1" 
                RenderTransformOrigin="-0.106,0.853" 
                Background="#F63090C7" 
                Foreground="White" 
                Height="34" 
                FontSize="24">
            <Button.Effect>
                <DropShadowEffect Direction="270" ShadowDepth="1"/>
            </Button.Effect>
        </Button>

        <Button x:Name="NotificationsButton"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="34" 
                Margin="1714,19,0,0" 
                Click="button_Click" 
                FontFamily="Microsoft YaHei" 
                FontWeight="Bold" 
                BorderThickness="0,0,0,0" 
                RenderTransformOrigin="3,0.618"
                Background="#F69FCBE4"
                Foreground="White"
                Height="34"
                FontSize="24">
            <StackPanel>
                <Image Source="/Images/notification.png" Opacity="0.8"/>
            </StackPanel>
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="Green"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="DarkGoldenrod"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button x:Name="MessagesButton"
                Content="Messages"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="34" Margin="1770,19,0,0"
                Click="button_Click"
                FontFamily="Microsoft YaHei"
                FontWeight="Bold"
                BorderThickness="0,1,1,1"
                RenderTransformOrigin="4.265,0.588"
                Background="#F63090C7"
                Foreground="White"
                Height="34"
                FontSize="24"/>

        <Line X1="0" Y1="125"
              X2="1920" Y2="125"
              Stroke="Black"
              StrokeThickness="4" Margin="0,-50,0,50" />

        <ScrollViewer HorizontalAlignment="Center" 
                      Height="1007" 
                      Margin="457,154,456.333,0" 
                      VerticalAlignment="Top" 
                      Width="1000">
            <StackPanel x:Name="PhotoFeed">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Margin" Value="5,10,5,0"/>
                    </Style>
                </StackPanel.Resources>
                <Image Source="/Images/mountain.jpg"/>
                <Image Source="/Images/mountain2.jpg"/>
            </StackPanel>
        </ScrollViewer>
        <Button x:Name="SavedTab"
            Content="Saved"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="128" 
            Margin="445,19,0,0" 
            Click="button_Click" 
            FontFamily="Microsoft YaHei" 
            FontWeight="Bold" 
            BorderThickness="0,0,0,0" 
            RenderTransformOrigin="0.5,0.5" 
            Background="#F69FCBE4" 
            Foreground="White" 
            Height="34" 
            FontSize="24">
        </Button>
        <Button x:Name="DiscussionsTab"
            Content="Discussions"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="128" 
            Margin="289,19,0,0" 
            Click="button_Click" 
            FontFamily="Microsoft YaHei" 
            FontWeight="Bold" 
            BorderThickness="0,0,0,0" 
            RenderTransformOrigin="0.5,0.5" 
            Background="#F69FCBE4" 
            Foreground="White" 
            Height="34" 
            FontSize="24">
        </Button>
        <Button x:Name="PhotosTab"
            Content="Photos"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="128" 
            Margin="135,19,0,0" 
            Click="button_Click" 
            FontFamily="Microsoft YaHei" 
            FontWeight="Bold" 
            BorderThickness="0,0,0,0" 
            RenderTransformOrigin="-0.328,0.441" 
            Background="#F69FCBE4" 
            Foreground="White" 
            Height="34" 
            FontSize="24">
        </Button>
        <TextBox HorizontalAlignment="Left" 
                 Height="34"
                 Margin="622,19,0,0" 
                 TextWrapping="Wrap"
                 Text="Search..."
                 VerticalAlignment="Top" 
                 Width="647"
                 Opacity="0.9" FontSize="18" FontFamily="Microsoft YaHei"
                 />
        <ToolBar HorizontalAlignment="Left"
                 Height="30" 
                 Margin="1210,124,0,0" 
                 VerticalAlignment="Top" 
                 Width="219"
                 Header="Sort by:"
                 >
            <Menu Height="25" 
                  VerticalAlignment="Top" 
                  Width="100"
                  
                  />
        </ToolBar>
    </Grid>
</Window>
