<Window x:Class="shuttr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shuttr"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="1920"
        Height="1200"
        Icon="/Images/Icons/shuttrLogoNoBack.ico">

    <Grid Background="#F69FCBE4">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TopBar" Height="Auto"/>
            <RowDefinition x:Name="Line" Height="Auto"/>
            <RowDefinition x:Name="Sort" Height="Auto"/>
            <RowDefinition x:Name="Content"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>

            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="Tabs" 
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Grid.Row="0"
                    Grid.Column="0">
            <Button x:Name="LogoButton"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0,0">
                <StackPanel>
                    <Image Source="/Images/Icons/shuttrLogoNoBack.png"
                           Height="50"/>
                </StackPanel>
            </Button>
            
            <Button x:Name="PhotosTab"
                    Content="Photos"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    Width="Auto" 
                    Height="Auto"
                    FontFamily="Microsoft YaHei" 
                    FontWeight="Bold"  
                    FontSize="20"
                    Margin="10,0,10,0"
                    BorderThickness="0,0,0,0"
                    Background="Transparent" 
                    Foreground="White"
                    Click="Button_Click" />

            <Button x:Name="DiscussionsTab"
                    Content="Discussions"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    Width="Auto" 
                    Height="Auto" 
                    FontFamily="Microsoft YaHei" 
                    FontWeight="Bold" 
                    FontSize="20"
                    Margin="10,0,10,0"
                    BorderThickness="0,0,0,0"
                    Background="Transparent" 
                    Foreground="White"
                    Click="Button_Click" />

            <Button x:Name="SavedTab"
                    Content="Saved"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    Width="Auto"
                    Height="Auto" 
                    FontFamily="Microsoft YaHei" 
                    FontWeight="Bold" 
                    FontSize="20"
                    Margin="10,0,10,0"
                    BorderThickness="0,0,0,0"
                    Background="Transparent" 
                    Foreground="White" 
                    Click="Button_Click" />
        </StackPanel>

        <Border x:Name="SearchBar"
                BorderBrush="Gray"
                BorderThickness="2"
                Background="#FFB8B8B8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                Width="Auto" 
                Height="34"
                Opacity="0.5"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4">
            <TextBox x:Name="SearchTextBox"
                     Text=" Search photos, discussions, people...                    " 
                     VerticalAlignment="Center" 
                     FontFamily="Microsoft YaHei" 
                     FontWeight="Bold" 
                     FontSize="18" 
                     Opacity="0.5">
                <TextBox.Background>
                    <SolidColorBrush Opacity="0"/>
                </TextBox.Background>
            </TextBox>
        </Border>

        <StackPanel x:Name="UserControls"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Row="0"
                    Grid.Column="2">

            <Button x:Name="PostButton"
                Content="POST"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Margin="30,0"
                Width="85"
                Height="34"
                BorderThickness="0,1,1,1"
                Background="#F63090C7" 
                Foreground="White" 
                Click="Button_Click">
                <Button.Effect>
                    <DropShadowEffect Direction="270" ShadowDepth="1"/>
                </Button.Effect>
            </Button>

            <Button x:Name="NotificationsButton"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"  
                    Margin="10,0,5,0"
                    Width="34"
                    Height="34"
                    Background="Transparent"
                    Foreground="White"
                    Click="Button_Click" >
                <StackPanel>
                    <Image Source="/Images/Icons/notification.png" Opacity="0.65"/>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Green"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGoldenrod"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button x:Name="MessagesButton"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top" 
                    Margin="5,0,5,0"
                    Width="34" 
                    Height="34"
                    Background="Transparent"
                    Foreground="White"
                    Click="Button_Click">
                <StackPanel>
                    <Image Source="/Images/Icons/messages.png" Opacity="0.7"/>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Green"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGoldenrod"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button x:Name="AccountButton"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="10,0,10,0"
                    Width="34"
                    Height="34" 
                    Background="Transparent"
                    Foreground="White"
                    Click="Button_Click">
                <StackPanel>
                    <Image Source="/Images/Icons/userprofile.png" Opacity="0.7"/>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Green"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGoldenrod"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <Line X1="0"
              X2="1920"
              Stroke="Black"
              StrokeThickness="1"
              Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="4">
        </Line>

        <Border x:Name="SortByContainer"
                HorizontalAlignment="Center"
                Width="800"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="4">
            <Menu x:Name="sortBy"
                  Background="Transparent">
                <MenuItem Header="Sort By: "
                          Background="White">
                    <MenuItem Header="Following"/>
                    <MenuItem Header="Popular"/>
                    <MenuItem Header="New"/>
                    <MenuItem Header="Most Commeted"/>
                    <MenuItem Header="Most Upvoted"/>
                </MenuItem>
            </Menu>
            <!--The menu looks pretty bad. Could maybe use tabs instead? The toolbar here (from before) could also work.
            <ToolBar x:Name="SortBy"
                     Header="Sort by:"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top" 
                     Height="30" 
                     Width="219">
                <Menu Height="25" 
                      VerticalAlignment="Top" 
                      Width="100"/>
            </ToolBar>-->
        </Border>

        <ScrollViewer HorizontalAlignment="Center"
                      VerticalAlignment="Top"  
                      Width="800"
                      Height="Auto"
                      Grid.Row="3"
                      Grid.Column="0"
                      Grid.ColumnSpan="4">
            <StackPanel x:Name="PhotoFeed">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Margin" Value="5,10,5,0"/>
                    </Style>
                </StackPanel.Resources>
                <Image Source="/Images/child.jpg"/>
                <Image Source="/Images/Coast.jpg"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
