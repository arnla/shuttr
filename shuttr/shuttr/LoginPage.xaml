<UserControl x:Class="shuttr.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:shuttr"
             mc:Ignorable="d" 
             d:DesignHeight="1200" d:DesignWidth="1920">
    <Grid Background="#F6FBFF">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="SortBy" Height="Auto"/>
            <RowDefinition x:Name="Content"/>
        </Grid.RowDefinitions>

        <Border x:Name="SortByContainer"
                HorizontalAlignment="Center"
                Width="800"
                Grid.Row="0">
            <!--The menu looks pretty bad. Could maybe use tabs instead? The toolbar here (from before) could also work.
            <ToolBar x:Name="SortBy"
                     Header="Sort by:"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top" 
                     Height="30" 
                     Width="219">
                <Menu Height="25" 
                      VerticalAlignment="Top" 
                      Width="100"/>
            </ToolBar>-->
        </Border>

        <ScrollViewer HorizontalAlignment="Center"
                      VerticalAlignment="Top"  
                      Width="800"
                      Height="Auto"
                      Grid.Row="1">
            <StackPanel x:Name="PhotoFeed">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Margin" Value="5,10,5,0"/>
                    </Style>
                </StackPanel.Resources>
            </StackPanel>

        </ScrollViewer>

        <Grid Margin="0,194,0,574" Grid.Row="1">
            <Image HorizontalAlignment="Center" Height="244" Margin="814,19,828,0" VerticalAlignment="Top" Width="278" Source="Images/Icons/shuttrLogoNoBack.png"/>
            <TextBox HorizontalAlignment="Center" Height="48" Margin="827,268,841,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="252" VerticalContentAlignment ="Center" TextAlignment ="Center" TextChanged="TextBox_TextChanged" FontFamily="Microsoft YaHei" FontSize="22" FontStyle="Italic"/>
            <TextBox HorizontalAlignment="Center" Height="45" Margin="827,321,841,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="252" VerticalContentAlignment ="Center" TextAlignment ="Center" TextChanged="TextBox_TextChanged" FontFamily="Microsoft YaHei" FontSize="22" FontStyle="Italic"/>

            <Button x:Name="PostButton"
                Content="LOG IN"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                VerticalContentAlignment ="Center"
                Margin="827,378,841,10"
                Width="252"
                Height="44"
                BorderThickness="0,1,1,1"
                Background="#F63090C7" 
                Foreground="White" 
                Click="Button_Click" FontFamily="Microsoft YaHei" FontSize="24" FontWeight="Bold">
                <Button.Effect>
                    <DropShadowEffect Direction="270" ShadowDepth="1"/>
                </Button.Effect>
            </Button>
        </Grid>


        <!-- Popup when an image is clicked
        <Popup x:Name="ImageView"
               StaysOpen="False"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Grid.RowSpan="2">
            <DockPanel x:Name="ImageViewDock"></DockPanel>
        </Popup>
        -->
    </Grid>
</UserControl>
