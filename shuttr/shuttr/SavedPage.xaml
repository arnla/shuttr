<UserControl x:Class="shuttr.SavedPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:shuttr"
             mc:Ignorable="d" 
             d:DesignHeight="1200" d:DesignWidth="1920">
    <Grid Background="#F6FBFF">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="SortBy" Height="Auto"/>
            <RowDefinition x:Name="Content"/>
        </Grid.RowDefinitions>

        <Border x:Name="SortByContainer"
                HorizontalAlignment="Center"
                Width="800"
                Grid.Row="0">
            <Menu x:Name="sortBy"
                  Background="Transparent">
                <MenuItem Header="Sort By: "
                          Background="White">
                    <MenuItem Header="Following"/>
                    <MenuItem Header="Popular"/>
                    <MenuItem Header="New"/>
                    <MenuItem Header="Most Commeted"/>
                    <MenuItem Header="Most Upvoted"/>
                </MenuItem>
            </Menu>
            <!--The menu looks pretty bad. Could maybe use tabs instead? The toolbar here (from before) could also work.
            <ToolBar x:Name="SortBy"
                     Header="Sort by:"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top" 
                     Height="30" 
                     Width="219">
                <Menu Height="25" 
                      VerticalAlignment="Top" 
                      Width="100"/>
            </ToolBar>-->
        </Border>

        <ScrollViewer HorizontalAlignment="Center"
                      VerticalAlignment="Top"  
                      Width="800"
                      Height="Auto"
                      Grid.Row="1">
            <StackPanel x:Name="PhotoFeed">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Margin" Value="5,10,5,0"/>
                    </Style>
                </StackPanel.Resources>
            </StackPanel>

        </ScrollViewer>


        <StackPanel HorizontalAlignment="Left" Height="1046" Margin="65,66,0,0" Grid.Row="1" VerticalAlignment="Top" Width="1762">
            <Border BorderBrush="Black" BorderThickness="1" Height="100">
                <Grid ShowGridLines="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="102*"/>
                        <ColumnDefinition Width="99*"/>
                        <ColumnDefinition Width="1463*"/>
                        <ColumnDefinition Width="96*"/>

                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Source="Images/Icons/userprofile.png" Height="88" Margin="10,4,18,6" Width="74"></Image>
                    <TextBlock Grid.Column="1" FontSize="20"  TextWrapping="Wrap" Margin="20,41,17,31" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Microsoft YaHei" Width="62" Height="26">
                            User 1
                    </TextBlock>
                    <TextBlock Grid.Column="2" FontSize="26" FontWeight="ExtraBold" TextWrapping="Wrap" Margin="11,10,0,0" FontFamily="Microsoft YaHei">
                            The quick brown fox jumps over the lazy dog. Why did he jump over the lazy dog? Couldn't he go around the dog?
                    </TextBlock>
                    <TextBlock Grid.Column="3" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Height="22" Margin="18,38" Width="60">
                            3 replies
                    </TextBlock>
                </Grid>
            </Border>


            <Image Height="745" Source="Images/Mountains.jpg" Stretch="Fill"/>


            <Border BorderBrush="Black" BorderThickness="1" Height="100">
                <Grid ShowGridLines="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="102*"/>
                        <ColumnDefinition Width="99*"/>
                        <ColumnDefinition Width="1463*"/>
                        <ColumnDefinition Width="96*"/>

                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Source="Images/Icons/userprofile.png" Height="88" Margin="10,4,18,6" Width="74"></Image>
                    <TextBlock Grid.Column="1" FontSize="20"  TextWrapping="Wrap" Margin="20,39,17,33" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Microsoft YaHei" Width="62" Height="26">
                            User 2
                    </TextBlock>
                    <TextBlock Grid.Column="2" FontSize="26" FontWeight="ExtraBold" TextWrapping="Wrap" Margin="11,10,0,0" FontFamily="Microsoft YaHei">
                            Is film dead?
                    </TextBlock>
                    <TextBlock Grid.Column="3" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Height="22" Margin="18,38" Width="60">
                            1 replies
                    </TextBlock>
                </Grid>

            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Height="100">
                <Grid ShowGridLines="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="102*"/>
                        <ColumnDefinition Width="99*"/>
                        <ColumnDefinition Width="1463*"/>
                        <ColumnDefinition Width="96*"/>

                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Source="Images/Icons/userprofile.png" Height="88" Margin="10,4,18,6" Width="74"></Image>
                    <TextBlock Grid.Column="1" FontSize="20"  TextWrapping="Wrap" Margin="20,41,17,31" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Microsoft YaHei" Width="62" Height="26">
                            User 3
                    </TextBlock>
                    <TextBlock Grid.Column="2" FontSize="26" FontWeight="ExtraBold" TextWrapping="Wrap" Margin="11,10,0,0" FontFamily="Microsoft YaHei">
                            2 + 2 is 4 minus 1 that's 3, quick maths
                    </TextBlock>
                    <TextBlock Grid.Column="3" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Height="22" Margin="10,38" Width="76">
                            420 replies
                    </TextBlock>
                </Grid>
            </Border>




        </StackPanel>

        <!-- Popup when an image is clicked
        <Popup x:Name="ImageView"
               StaysOpen="False"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Grid.RowSpan="2">
            <DockPanel x:Name="ImageViewDock"></DockPanel>
        </Popup>
        -->
    </Grid>
</UserControl>
