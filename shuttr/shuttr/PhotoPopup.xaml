<UserControl x:Class="shuttr.PhotoPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:shuttr"
             xmlns:control="clr-namespace:shuttr"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border x:Name="window" BorderBrush="Black" BorderThickness="5" Background="#F6FBFF" HorizontalAlignment="Center">
        <Grid x:Name="mainGrid" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="xRow" Height="Auto"/>
                <RowDefinition x:Name="titleRow"/>
                <RowDefinition x:Name="photoAndCommentsRow"/>
                <RowDefinition x:Name="commentBoxRow" Height="60"/>
            </Grid.RowDefinitions>

            <Button x:Name="CloseDiscussionButton" Content="X" FontWeight="Bold" Background="Red" Foreground="White" HorizontalAlignment="Right" Click="Close"/>

            <Grid x:Name="photoInfo" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid x:Name="UserInfo" Grid.Column="0" Margin="5,5,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="UserProfilePicture" Grid.Column="0" Source="Images/Icons/userprofile.png" Margin="5,5,5,5"></Image>
                    <Grid x:Name="UsernameMessage" Grid.Column="1" Margin="5,5,5,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="Username" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <Button x:Name="MessageUserButton" Grid.Row="1" Content="MESSAGE"></Button>
                    </Grid>
                </Grid>

                <TextBlock x:Name="title" Grid.Column="1" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <Button x:Name="NumRepliesButton" Grid.Column="2" Margin="5,5,5,5" Height="Auto" Width="Auto"/>

                <TextBlock x:Name="description" Grid.Row="1" Grid.ColumnSpan="3"/>
            </Grid>

            <ScrollViewer x:Name="photoAndComments" Grid.Row="2">
                <StackPanel x:Name="commentFeed">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Margin" Value="5,10,5,0"/>
                        </Style>
                    </StackPanel.Resources>
                </StackPanel>
            </ScrollViewer>

            <Grid x:Name="commentBoxGrid" Grid.Row="3" Margin="5,5,5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="userProfilePicture" Grid.Column="0" Source="Images/Icons/userprofile.png" Margin="5,5,5,5"></Image>
                <RichTextBox x:Name="commentBox" Grid.Column="1" Margin="5,5,5,5" Height="40" Width="Auto" VerticalScrollBarVisibility="Auto">
                    <RichTextBox.Document>
                        <FlowDocument>
                            <FlowDocument.Blocks>
                                <Paragraph>
                                    Type a comment...
                                </Paragraph>
                            </FlowDocument.Blocks>
                        </FlowDocument>
                    </RichTextBox.Document>
                </RichTextBox>
                <Button x:Name="postCommentButton" Grid.Column="2" Margin="5,5,5,5" Content="Send" Height="40" Width="Auto" Click="ButtonClick"></Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
